<div class="mini-banner auto">
	<div class="container">
		<h2>Request Management</h2>
    <% if (messages && messages['error'].length > 0) { %>
      <div class="alert alert-danger">
      <% messages['error'].forEach(function(message) { %>
        <%= message %>
        <br>
      <% }); %>
      </div>
      <br>
    <% } %>
    <% if (messages && messages['warning'].length > 0) { %>
      <div class="alert alert-warning">
      <% messages['warning'].forEach(function(message) { %>
        <%= message %>
        <br>
      <% }); %>
      </div>
      <br>
    <% } %>
    <% if (messages && messages['success'].length > 0) { %>
      <div class="alert alert-success">
      <% messages['success'].forEach(function(message) { %>
        <%= message %>
        <br>
      <% }); %>
      </div>
      <br>
    <% } %> 
	</div>
</div>

<div class="sub-banner">
  <div class="container">
    <h2>Manage all your data requests here.</h2>
  </div>
</div>

<div class="container wrapper">
	<div class="col-md-12">
		<!-- Pending Requests Table -->
		<h3 rel="tooltip" data-toggle="tooltip" data-placement="top" title="Tooltip on top">Pending Requests</h3>
		<table class='table table-striped table-hover' id="pending">
			<thead>
				<tr>
					<th>User ID</th>
					<th>Full Name</th>
					<th>Dataset</th>
					<th>Request Type</th>
					<th>Date Requested</th>
          <th>Reason</th>
					<th>Grant</th>
					<th>Deny</th>
				</tr>
			</thead>

			<tbody>
			<% _.each(requests, function(request) { %>
				<% if (!request.granted && !request.denied) { %>
					<tr data-id="<%= request.id %>" data-model="request">
						<td><a href="/user/show/<%= request.requestingUser.id %>" target="_blank"><%= request.requestingUser.id %></a></td>
						<td><%= request.firstName %> <%= request.lastName %></td>
						<td><%= request.dataModel.displayName %>: <%= request.dataset %></td>
						<td><%= request.requestType %></td>
						<td><%= request.createdAt %></td>
            <td><a class="btn btn-sm btn-primary" data-toggle="modal" href="#pendingModal-<%= request.id %>">Reason</a></td>
						<td><a href="/request/grant/<%= request.id %>" class="btn btn-sm btn-success">Grant</a></td>
						<td>
							<form action="/request/deny/<%= request.id %>" method="POST">
							<input type="hidden" name="_method" value="deny"/>
							<input type="submit" class="btn btn-sm btn-danger" value="Deny"/>
							<input type="hidden" name="_csrf" value="<%= _csrf %>" />
							</form>
						</td>
            <!-- Modal for Pending Requests-->
            <div class="modal fade" id="pendingModal-<%= request.id %>" tabindex="-1" role="dialog" aria-labelledby="pendingLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h3 class="modal-title" id="pendingLabel"><b>Request Reason</b></h3>
                  </div>

                  <div class="modal-body">
                    <p><%= request.reason %></p>
                  </div>

                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Modal -->
					</tr> 
				<% } %>
			<% }) %>
			</tbody>
		</table>
	</div>

	<!-- Granted Requests Table -->
	<div class="col-md-12">
		<h3 rel="tooltip" data-toggle="tooltip" data-placement="top" title="Tooltip on top">Granted Requests</h3>
		<table class='table table-striped table-hover' id="granted">
			<thead>
				<tr>
					<th>User ID</th>
					<th>Full Name</th>
					<th>Dataset</th>
					<th>Request Type</th>
					<th>Date Requested</th>
					<th>Date Granted</th>
          <th>Reason</th>
				</tr>
			</thead>

			<tbody>
			<% _.each(requests, function(request) { %>
				<% if (request.granted) { %>
					<tr data-id="<%= request.id %>" data-model="request">
						<td><a href="/user/show/<%= request.requestingUser.id %>" target="_blank"><%= request.requestingUser.id %></a></td>
						<td><%= request.firstName %> <%= request.lastName %></td>
						<td><%= request.dataset %></td>
						<td><%= request.requestType %></td>
						<td><%= request.createdAt %></td>
						<td><%= request.updatedAt %></td>
            <td><a class="btn btn-sm btn-primary" data-toggle="modal" href="#grantedModal-<%= request.id %>">Reason</a></td>
					</tr>
          <!-- Modal for Granted Requests-->
          <div class="modal fade" id="grantedModal-<%= request.id %>" tabindex="-1" role="dialog" aria-labelledby="grantedLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <h3 class="modal-title" id="grantedLabel"><b>Request Reason</b></h3>
                </div>

                <div class="modal-body">
                  <p><%= request.reason %></p>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          <!-- End Modal --> 
				<% } %>
			<% }) %>
			</tbody>
		</table>
	</div>

	<!-- Denied Requests Table -->
	<div class="col-md-12">
		<h3 rel="tooltip" data-toggle="tooltip" data-placement="top" title="Tooltip on top">Denied Requests</h3>
		<table class='table table-striped table-hover' id="denied">
			<thead>
				<tr>
					<th>User ID</th>
					<th>Full Name</th>
					<th>Dataset</th>
					<th>Request Type</th>
					<th>Date Requested</th>
					<th>Date Denied</th>
          <th>Reason</th>
				</tr>
			</thead>

			<tbody>
			<% _.each(requests, function(request) { %>
				<% if (request.denied) { %>
					<tr data-id="<%= request.id %>" data-model="request">
						<td><a href="/user/show/<%= request.requestingUser.id %>" target="_blank"><%= request.requestingUser.id %></a></td>
						<td><%= request.firstName %> <%= request.lastName %></td>
						<td><%= request.dataset %></td>
						<td><%= request.requestType %></td>
						<td><%= request.createdAt %></td>
						<td><%= request.updatedAt %></td>
            <td><a class="btn btn-sm btn-primary" data-toggle="modal" href="#deleteModal-<%= request.id %>">Reason</a></td>
					</tr>

          <!-- Modal for Deleted Requests-->
          <div class="modal fade" id="deleteModal-<%= request.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <h3 class="modal-title" id="deleteLabel"><b>Request Reason</b></h3>
                </div>

                <div class="modal-body">
                  <p><%= request.reason %></p>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          <!-- End Modal --> 
				<% } %>
			<% }) %>
			</tbody>
		</table>
	</div>
	<p><b>Warning:</b> This button clears all visualizations and should only be used for development purposes.</p>
	<p>
		<a href="#deleteAllModal" data-toggle="modal" class="btn btn-danger btn-sm">Delete All</a>
	</p>
</div>

<!-- Modal for Deleting All Requests -->
<div class="modal fade" id="deleteAllModal" tabindex="-1" role="dialog" aria-labelledby="deleteAllLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="modal-title" id="deleteAllLabel"><b>Delete All Requests</b></h3>
      </div>

      <div class="modal-body">
        <p><b>Warning:</b> Deleting all requests will permanently remove them from records. Are you sure you want to continue?</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <a type="submit" class="btn btn-danger" href="/request/deleteAll">Delete All</a>
      </div>
    </div>
  </div>
</div>
<!-- End Modal -->

<script>
  // Table pagination
  $(document).ready(function() {
  		$('#pending').dataTable();
      $('#granted').dataTable();
      $('#denied').dataTable();
  });
</script>