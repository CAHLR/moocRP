    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/jquery-1.11.0.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.dataTables.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/d3.v3.min.js"></script>
    <script src="/js/dataTables.bootstrap.js"></script>
    <script src="/js/ejs/ejs_production.js"></script>
    <script src="/js/ejs/view.js"></script>
    <script src="/js/sails.io.js"></script>
    <script src="/js/socket.io.js"></script>
    <!--SCRIPTS END-->

    <script>
      // Assigning active tab
      $(document).ready(function(){
        var title = '<%- title %>';
        var nav = document.getElementById(title);
        if (nav) {
          var originalClass = nav.className;
          nav.className = 'navbar-active-button';
        } else {
          nav = document.getElementById('Admin Panel');
          nav.className += ' dropdown-active'
        }
      });
    </script>
  </body>
</html>
